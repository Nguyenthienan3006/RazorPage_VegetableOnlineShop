@using Microsoft.AspNetCore.Mvc;
@using Microsoft.AspNetCore.Http;
@using VegetablesOnlineShop.ModelView;
@inject IHttpContextAccessor Accessor;
@{
    var count = Accessor.HttpContext.Session.GetInt32("count");
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - VegetablesOnlineShop</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    @* template resources *@

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Raleway:wght@600;800&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/Template/lib/lightbox/css/lightbox.min.css" rel="stylesheet">
    <link href="~/Template/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">


    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/Template/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/Template/css/style.css" rel="stylesheet">
</head>
<body>
    <header>
        <!-- Spinner Start -->
        <div id="spinner" class="show w-100 vh-100 bg-white position-fixed translate-middle top-50 start-50  d-flex align-items-center justify-content-center">
            <div class="spinner-grow text-primary" role="status"></div>
        </div>
        <!-- Spinner End -->
        <!-- Navbar start -->
        <div class="container-fluid fixed-top">
            <div class="container topbar bg-primary d-none d-lg-block">
                <div class="d-flex justify-content-between">
                    <div class="top-info ps-2">
                        <small class="me-3"><i class="fas fa-map-marker-alt me-2 text-secondary"></i> <a href="#" class="text-white">123 Street, VietNam</a></small>
                        <small class="me-3"><i class="fas fa-envelope me-2 text-secondary"></i><a href="#" class="text-white">annguyen3024@gmail.com</a></small>
                    </div>

                </div>
            </div>
            <div class="container px-0">
                <nav class="navbar navbar-light bg-white navbar-expand-xl">
                    <a href="index.html" class="navbar-brand"><h1 class="text-primary display-6">Fruitables</h1></a>
                    <button class="navbar-toggler py-2 px-3" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                        <span class="fa fa-bars text-primary"></span>
                    </button>
                    <div class="collapse navbar-collapse bg-white" id="navbarCollapse">
                        <div class="navbar-nav mx-auto">
                            <a asp-page="/Index" class="nav-item nav-link">Home</a>
                            <a asp-page="/Common/Shop" class="nav-item nav-link">Shop</a>
 
                            
                        </div>
                        <div class="d-flex m-3 me-0">

                            <a asp-page="/Common/Cart" class="position-relative me-4 my-auto">
                                <i class="fa fa-shopping-bag fa-2x"></i>
                                @if (count == 0 || count == null)
                                {
                                    <span class="position-absolute bg-secondary rounded-circle d-flex align-items-center justify-content-center text-dark px-1" style="top: -5px; left: 15px; height: 20px; min-width: 20px;">0</span>
                                }
                                else
                                {
                                    <span class="position-absolute bg-secondary rounded-circle d-flex align-items-center justify-content-center text-dark px-1" style="top: -5px; left: 15px; height: 20px; min-width: 20px;">@count</span>

                                }
                            </a>
                            @if (Accessor.HttpContext.Session.GetString("CustomerEmail") != null)
                            {
                                <div class="nav-item dropdown">
                                    <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">
                                        <i class="fas fa-user fa-2x"></i>
                                    </a>
                                    <div class="dropdown-menu m-0 bg-secondary rounded-0">
                                        <a asp-page="/Common/Profile" class="dropdown-item">Profile</a>
                                        <div class="dropdown-divider"></div>
                                        <a asp-page="/Common/My_Order" class="dropdown-item">My Orders</a>
                                        <div class="dropdown-divider"></div>
                                        <a asp-page="/Common/Login" asp-route-logout="true" class="dropdown-item">Logout</a>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <a class="btn btn-primary border-2 border-secondary text-white" asp-page="/Common/Login" style="margin-right:10px">Login</a>
                                <a class="btn btn-primary border-2 border-secondary text-white" asp-page="/Common/Register">Register</a>
                            }
                        </div>
                    </div>
                </nav>
            </div>
        </div>
        <!-- Navbar End -->
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" style="bottom: 0;margin: 0; padding: 0;">
        <!-- Copyright Start -->
        <div class="container-fluid copyright bg-dark py-4">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 text-center text-md-start mb-3 mb-md-0">
                        <span class="text-light"><a href="#"><i class="fas fa-copyright text-light me-2"></i>Welcome to</a>, Fruitables.</span>
                    </div>
                    <div class="col-md-6 my-auto text-center text-md-end text-white">
